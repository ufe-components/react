@import('../../assets/styles/variables.styl')
@import('../../assets/styles/mixin.styl')

.ufe-select
  reset-component()
  display inline-block
  position relative
  cursor pointer
  height 32px
  outline none
  user-select none
  background-color #fff
  border-radius $border-radius-base
  border $border-base
  transition all .3s $ease-in-out
  padding 0 11px
  &:hover
    border-color $hover-color
  &.ufe-select-selection, &:focus, &:active
    border-color $hover-color
    outline 0
    box-shadow 0 0 0 2px rgba(24, 144, 255, 0.2)
  .ufe-select-input
    outline none
    border none
    width 100%
    height 30px
    line-height 30px
    &::placeholder
      color #bfbfbf
  span
    line-height 30px
    vertical-align middle
  i
    color $disable-color
    position absolute
    right 11px
    line-height 30px
    vertical-align middle
  &.ufe-select-disabled
    color $disable-color
    background-color $disabled-bg
    cursor not-allowed
    &:hover, &.ufe-select-selection, &:focus, &:active
      border $border-base
      box-shadow none

.ufe-select-tooltip-content
  reset-component()
  background-color #fff!important
  color $text-color!important
  margin-top 2px!important
  padding 0!important

.ufe-selelct-list
  outline none
  max-height 250px
  overflow hidden
  text-align left
  padding 0
  margin-bottom 0

.ufe-select-item
  position relative
  display block
  padding 5px 12px
  line-height 22px
  font-weight normal
  color $text-color
  white-space nowrap
  cursor pointer
  overflow hidden
  text-overflow ellipsis
  transition background .3s ease
  &.ufe-select-item-hover
    background-color $menu-item-selected-bgc
  &:hover
    background-color $menu-item-selected-bgc
  &:first-child
    border-radius 4px 4px 0 0
  &:last-child
    border-radius 0 0 4px 4px
  &.ufe-select-item-selected
    background-color $background-color-light
    font-weight 600
    color $text-color
  &.ufe-select-item-disabled
    color $disable-color
    cursor not-allowed
    &:hover
      background-color #fff
      cursor not-allowed
      color $disable-color

.ufe-select-group
  .ufe-select-group-title
    color $title-color
    padding 0 12px
    height 32px
    line-height 32px
    font-size $font-size-sm
  .ufe-select-group-list
    margin 0
    padding 0
    > .ufe-select-item
      padding-left 20px

.ufe-select-icon-enter
  transform rotate(0deg)
.ufe-select-icon-enter-active
  transform rotate(180deg)
  transition transform .15s ease-in-out!important
.ufe-select-icon-enter-done
  transform rotate(180deg)
.ufe-select-icon-exit
  transform rotate(180deg)
.ufe-select-icon-exit-active
  transform rotate(0deg)
  transition transform .15s ease-out!important
.ufe-select-icon-exit-done
  transform rotate(0deg)


.ufe-select-list-enter
  transform-origin 0 0
  transform scaleY(0.0001)
  opacity 0
.ufe-select-list-enter-active
  transform scaleY(1)
  opacity 1
  transition transform .15s $ease-out, opacity .15s $ease-out
.ufe-select-list-exit
  transform-origin 0 0
  transform scaleY(1)
  opacity 1
.ufe-select-list-exit-active
  transform scaleY(0.0001)
  opacity 0
  transition transform .15s $ease-in-out, opacity .15s $ease-in-out
