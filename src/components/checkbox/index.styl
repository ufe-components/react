@import '../../assets/styles/variables.styl'

.ufe-checkbox
  font-size 14px
  color $text-color
  white-space nowrap
  cursor pointer
  outline none
  display inline-block
  line-height 1
  position relative
  vertical-align middle
  top -0.09em

.ufe-checkbox-wrapper:hover .ufe-checkbox-input,
.ufe-checkbox:hover .ufe-checkbox-input,
.ufe-checkbox-input:focus .ufe-checkbox-inner
  border-color $primary-color

.ufe-checkbox-checked
  &:after
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border-radius 2px
    border 1px solid $primary-color
    content ''
    visibility hidden
    animation checkboxEffect 0.36s ease-in-out
    animation-fill-mode both
  &:hover:after,
  .ufe-checkbox-wrapper:hover &:after
    visibility visible

.ufe-checkbox-inner
  font-size 14px
  color $text-color
  position relative
  top 0
  left 0
  display block
  width 16px
  height 16px
  border-radius 2px
  border $border-base
  background-color #fff
  transition all .3s
  &:after
    transform rotate(45deg) scale(0)
    position absolute
    left 4.57142857px
    top 1.14285714px
    display table
    width 5.71428571px
    height 9.14285714px
    border 2px solid #fff
    border-top 0
    border-left 0
    content ' '
    transition all .1s $ease-in-back

.ufe-checkbox-input
  position absolute
  left 0
  z-index 1
  cursor pointer
  opacity 0
  top 0
  bottom 0
  right 0
  width 100%
  height 100%

.ufe-checkbox-indeterminate
  .ufe-checkbox-inner
    &:after
      content ' '
      transform scale(1)
      position absolute
      left 2.42857143px
      top 5.92857143px
      width 9.14285714px
      height 1.14285714px
  &.ufe-checkbox-disabled
    .ufe-checkbox-inner
      &:after
        border-color $disable-color

.ufe-checkbox-checked .ufe-checkbox-inner:after
  transform rotate(45deg) scale(1)
  position absolute
  display table
  border 2px solid #fff
  border-top 0
  border-left 0
  content ' '
  transition all .2s $ease-out-back .1s

.ufe-checkbox-checked .ufe-checkbox-inner,
.ufe-checkbox-indeterminate .ufe-checkbox-inner
  background-color $primary-color
  border-color $primary-color

.ufe-checkbox-disabled
  cursor not-allowed
  &.ufe-checkbox-checked
    .ufe-checkbox-inner:after
      animation-name ''
      border-color $disable-color
  .ufe-checkbox-input
    cursor not-allowed
  .ufe-checkbox-inner
    border-color #d9d9d9!important
    background-color $disabled-bg
    &:after
      animation-name ''
      border-color $disabled-bg
  & + span
    color $disable-color
    cursor not-allowed

.ufe-checkbox-wrapper
  line-height unset
  cursor pointer
  display inline-block
  & + &
    margin-left 8px

.ufe-checkbox-wrapper + span,
.ufe-checkbox + span
  padding 0 8px

.ufe-checkbox-group
  font-size 14px
  color $text-color
  display inline-block
  .ufe-checkbox-group-item
    display inline-block
    margin-right 8px
    &:last-child
      margin-right 0
    & + &
      margin-left 0


@keyframes checkboxEffect
  0%
    transform scale(1)
    opacity 0.5
  100%
    transform scale(1.6)
    opacity 0
